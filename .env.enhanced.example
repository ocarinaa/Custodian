# ===== REQUIRED SETTINGS =====

# Google Gemini API Key (get from https://aistudio.google.com/app/apikey)
GOOGLE_API_KEY="your_gemini_api_key_here"

# Path to dots.ocr model directory
DOTS_OCR_MODEL_PATH="./weights/DotsOCR"

# Source folder containing documents to process
SOURCE_FOLDER="/path/to/your/documents"

# Target folder for successfully processed files
RENAMED_FOLDER="/path/to/renamed/files"

# Folder for files requiring manual review
NEEDS_REVIEW_FOLDER="/path/to/review/files"

# ===== PERFORMANCE SETTINGS =====

# Number of parallel processing threads (1-4 recommended)
MAX_WORKERS=2

# Files to process in each batch
BATCH_SIZE=5

# GPU memory fraction (0.1-0.9, lower if you have memory issues)
GPU_MEMORY_FRACTION=0.8

# ===== ERROR HANDLING =====

# Enable Tesseract fallback when dots.ocr fails
ENABLE_FALLBACK=true

# Number of retry attempts for failed operations
RETRY_ATTEMPTS=3

# Delay between retries (seconds)
RETRY_DELAY=2

# ===== OPTIONAL TESSERACT SETTINGS (for fallback) =====

# Path to Tesseract executable (only needed if fallback enabled)
# Windows: TESSERACT_PATH="C:\\Program Files\\Tesseract-OCR\\tesseract.exe"
# Linux: TESSERACT_PATH="/usr/bin/tesseract"
TESSERACT_PATH=""

# Path to Poppler bin directory (only needed for PDF fallback)
# Windows: POPPLER_PATH="C:\\path\\to\\poppler\\bin"
POPPLER_PATH=""

# ===== LOGGING SETTINGS =====

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"

# Enable file logging
ENABLE_FILE_LOGGING=true

# Maximum log file size in MB
MAX_LOG_SIZE=50